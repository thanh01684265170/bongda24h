<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="5dp"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@color/gray"
        >
        <ImageView
            android:id="@+id/img_news"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/c"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_news_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:padding="@dimen/_5sdp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="De Gea la cau thu dang cap nhat the gioi duy nhat MU so huu"
            android:layout_toRightOf="@id/img_news"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_toRightOf="@id/img_news"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_20sdp">
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/ic_access_time"
                />
            <TextView
                android:id="@+id/tv_news_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 giờ trước"
                android:textSize="@dimen/text_size_nano"
                android:gravity="center"
                android:textColor="@color/graydark"
                android:layout_marginRight="@dimen/_2sdp"
                />
            <TextView
                android:id="@+id/tv_news_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bóng đá Việt Nam"
                android:singleLine="true"
                android:textSize="@dimen/text_size_micro"
                android:gravity="center"
                android:textColor="@color/colorOrange"
                android:ellipsize="end"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>